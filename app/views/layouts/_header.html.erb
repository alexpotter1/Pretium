<div class="navbar navbar-fixed-top navbar-custom" style="width: 100%">
  <%= image_tag('logo.svg', :style => 'width: 50%; height: auto; margin-left: -17vw; margin-top: -5vh;') %>

  <div class="col-xs-4">
    <%= link_to(bitcoin_index_path) do %>
      <%= content_tag(:button, '<b>Bitcoin</b>'.html_safe, :class => 'btn btn-outline-dark btn-md btn-navbar-custom') %>
    <% end %>

    <%= link_to(ethereum_index_path) do %>
      <%= content_tag(:button, '<b>Ethereum</b>'.html_safe, :class => 'btn btn-outline-dark btn-md btn-navbar-custom') %>
    <% end %>

    <button type="button" class="btn btn-outline-dark btn-md btn-navbar-custom" data-toggle="modal" data-target="#settings-modal"><b>OPTIONS</b></button>
  </div>

  <div id="settings-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title text-left">Pretium Options</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <div class="modal-body">
          <%= simple_form_for(:prefs, html: { class: 'form-inline' }) do |form| %>
            <%= form.input :time_interval, collection: ["1m", "1h", "1d"] %>
            <%= form.button :submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
